<div class="container">
    <div class="row">
        <%= render'users/list', user:current_user %>
        <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table table-hover">
            <tr>
                <th class="header table-link">image</th>
                <th class="header table-title">name</th>
                <th class="header table-body"></th>
            </tr>
            <% @users.each do |user| %>
                <tr>
                    <td><%= image_tag user.get_profile_image(100,100) %></td>
                    <td><%= user.name %></td>
                    <td><%= link_to 'Show', user_path(user.id) %></td>
                </tr>
            <% end %>
        </table>
        <div>
    </div>
</div>