<div class="container">
    <div class="row justify-content-center">
        <div>
            <h2>Editing Book</h2>
            <%= render 'books/error', book:@book %>
            <%= form_with model: @book do |f| %>
                <%= f.label :title %><br>
                <%= f.text_field :title %>
                <br>
                <%= f.label :body %><br>
                <%= f.text_area :body %>
                <br>
                <%= f.submit 'Update Book' %>
                <br>
                <span><%= link_to 'Show', book_path(@book.id) %></span>
                <span><%= link_to 'Back', books_path %></span>
            <% end %>
        </div>
    </div>
</div>

