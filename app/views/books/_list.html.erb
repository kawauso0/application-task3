<div class="col-md-8 offset-md-1">
<h2>Books</h2>
<table class="table table-hover">
    <tr>
        <th class="header table-link"></th>
        <th class="header table-title">Title</th>
        <th class="header table-body">Opinion</th>
    </tr>
    <% @books.each do |book| %>
        <tr>
            <td>
                <%= link_to user_path(book.user_id) do %>
                    <%= image_tag book.get_image %>
                <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id)%></td>
            <td><%= book.body %></td>
        </tr>

    <% end %>
</table>
